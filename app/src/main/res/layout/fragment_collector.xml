<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="collectoVM"
            type="com.example.milkflow.viewmodel.MilkViewModel" />

    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05121212"
        android:padding="4dp"
        tools:context=".ui.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add_button"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:backgroundTint="#4CAF50"
                android:layout_marginBottom="10dp"
                android:elevation="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/total_sum_supplier_tv"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`Rs. `+String.valueOf(collectoVM.totalCollectorAmount), default=`Rs 123`}"
                        android:layout_alignParentEnd="true"
                        />

                    <TextView
                        android:id="@+id/titleAmount"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount: "
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/titleQuantity"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Quantity: "
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/titleAmount"/>

                    <TextView
                        android:id="@+id/titleSuppliers"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Collectors: "
                        android:layout_alignParentStart="true"
                        android:layout_below="@id/titleQuantity"/>

                    <TextView
                        android:id="@+id/total_suppliers"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(collectoVM.totalCollectorQuantity+` liters`), default=`Rs 123`}"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/total_sum_supplier_tv"
                        />

                    <TextView
                        android:id="@+id/total_supplier_quantity"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@{String.valueOf(collectoVM.noOfCollectors), default=`Rs 123`}"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/total_suppliers"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:padding="8dp"
                android:elevation="20dp"
                app:cardCornerRadius="8dp"
                android:layout_margin="2dp"
                android:backgroundTint="#f5f7d3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="8dp"
                    android:elevation="20dp"
                    android:layout_height="wrap_content">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp">


                        <TextView
                            android:id="@+id/name_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="56dp"
                            android:fontFamily="@font/poppins"
                            android:text = "Name"
                            app:layout_constraintBottom_toBottomOf="@+id/person_quantity"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/person_quantity"
                            app:layout_constraintVertical_bias="0.0"
                            style="@style/font_style_1" />

                        <TextView
                            android:id="@+id/person_quantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="16dp"
                            android:fontFamily="@font/poppins"
                            android:text="Quantity"
                            style="@style/font_style_1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>



            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4CAF50" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/milkperson_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="#4CAF50"
            android:text="Add new collector"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>
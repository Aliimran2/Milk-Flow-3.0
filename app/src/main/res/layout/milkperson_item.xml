<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="personModel"
            type="com.example.milkflow.model.PersonModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:padding="8dp"
        android:elevation="20dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:backgroundTint="#FFF176"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/poppins"
                android:text="@{personModel.personName}"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="@+id/person_quantity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/person_quantity"
                app:layout_constraintVertical_bias="0.0"
                style="@style/font_size" />

            <TextView
                android:id="@+id/person_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/poppins"
                android:text="@{String.valueOf(personModel.personQuantity)+` liters`, default = `123`}"
                style="@style/font_size"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
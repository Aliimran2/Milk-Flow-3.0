<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="expenseModel"
            type="com.example.milkflow.viewmodel.MilkViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05121212"
        android:padding="4dp"
        tools:context=".ui.MainActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/add_button"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/red"
                android:layout_marginBottom="10dp"
                android:elevation="20dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    >

                    <TextView
                        android:id="@+id/total_sum_supplier_tv"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`Rs. `+String.valueOf(expenseModel.totalExpenditure), default=`Rs 123`}"
                        android:layout_alignParentEnd="true"
                        />

                    <TextView
                        android:id="@+id/titleAmount"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount: "
                        android:layout_alignParentStart="true" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <include layout="@layout/heading_layout_1" />

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#4CAF50" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                tools:listitem="@layout/expense_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

        <Button
            android:id="@+id/add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/red"
            android:text="Add new expenditure"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/white" />

    </RelativeLayout>
</layout>
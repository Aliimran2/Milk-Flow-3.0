<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="statModel"
            type="com.example.milkflow.viewmodel.MilkViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.StatFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/summaryTitle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:elevation="20sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/dialog_bg">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Summary"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/poppins"
                android:textColor="@color/blue"
                android:textAlignment="center" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/summaryTitle"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_margin="4dp"
                android:id="@+id/supplier_view"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:padding="4dp">

                    <ImageView
                        android:id="@+id/icon_sup"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentStart="true"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_bkgd"
                        android:backgroundTint="@color/blue"
                        android:padding="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/icons_supplier" />

                    <TextView
                        android:id="@+id/title_stat_sup"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/icon_sup"
                        android:text="@string/suppliers" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/poppins"
                        android:text="@{String.valueOf(statModel.totalSupplierAmount)}"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_margin="4dp"
                android:id="@+id/customer_view"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/icons_collector"
                        android:background="@drawable/circle_bkgd"
                        android:backgroundTint="@color/blue"
                        android:layout_alignParentStart="true"
                        android:id="@+id/icon_exp"
                        android:scaleType="centerCrop" />


                    <TextView
                        android:id="@+id/title_stat_exp"
                        style="@style/font_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/icon_exp"
                        android:text="@string/customers" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@{String.valueOf(statModel.totalCustomerAmount)}"
                        android:fontFamily="@font/poppins"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_margin="4dp"
                android:id="@+id/expense_view"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/icons_expenses"
                        android:background="@drawable/circle_bkgd"
                        android:backgroundTint="@color/blue"
                        android:layout_alignParentStart="true"
                        android:id="@+id/icon_col"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expenses"
                        style="@style/font_size"

                        android:id="@+id/title_stat_col"
                        android:layout_toEndOf="@+id/icon_col"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@{String.valueOf(statModel.totalExpenditure)}"
                        android:fontFamily="@font/poppins"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="12dp"
                android:layout_margin="4dp"
                android:id="@+id/profit_view"
                app:cardCornerRadius="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:layout_margin="4dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="8dp"
                        android:layout_margin="8dp"
                        android:src="@drawable/icons_statistics_b"
                        android:background="@drawable/circle_bkgd"
                        android:backgroundTint="@color/blue"
                        android:layout_alignParentStart="true"
                        android:id="@+id/icon_pro"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profit"
                        style="@style/font_size"
                        android:id="@+id/title_stat_pro"
                        android:layout_toEndOf="@+id/icon_pro"
                        android:layout_marginStart="8dp"
                        android:layout_centerVertical="true" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@{String.valueOf(statModel.difference)}"
                        android:fontFamily="@font/poppins"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>


</layout>
